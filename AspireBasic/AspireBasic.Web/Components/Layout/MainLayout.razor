@inherits LayoutComponentBase

<div
	class="page" >
	<div
		class="sidebar" >
		<NavMenu />
	</div>

	<main>
		<div
			class="px-4 top-row" >
			<a
				href="https://learn.microsoft.com/aspnet/core/"
				target="_blank" >
				About
			</a>
		</div>

		<article
			class="content px-4" >
			@Body
		</article>
	</main>
</div>

<div
	id="blazor-error-ui" >
	An unhandled error has occurred.
	<a
		class="reload"
		href="" >
		Reload
	</a>
	<a
		class="dismiss" >
		🗙
	</a>
</div>